<!-- 헤더 푸터 CSS, JS -->
<link rel='stylesheet' type='text/css' media='screen' href='/css/headerfooter.css'>
<!-- css   -->
<link rel="stylesheet" type="text/css" href="/css/boardOneView.css">

<div id="boardView">
    <div id="boardContent">
        <div id="viewbname" style="margin-top: 20px"><!--글제목--></div>

        <div id="memberheard">
            <div id="boardWriteInfo">
                <img src=""/><!-- 프로필사진-->
                <div>
                    <div id="viewWriter">
                        <span>작성자 : </span><div id="writerName"><!--작성자이름--></div>
                    </div>
                    <div id="viewUpdate">
                        <span>마지막수정일 : </span><div id="registrationDate"><!--수정일--></div>
                    </div>
                </div>
            </div>
            <div id="viewCount">
                <img src="/img/view-icon.png"/>
                <div id="viewpoint"><!-- 조회수 --></div>
            </div>
        </div>

        <div id="boardViewContent"><!-- 글내용 출력라인 -->
            <div id="categoryBox">
                카테고리 : <span id="categoryA"><!--카테고리A(지역)--></span><span id="categoryB"><!--카테고리B(음식분류)--></span>
            </div>
            <div id="contentBox">
                <!--글내용-->
            </div>
            <div id="buttonBox">
                <!-- ButtonOff 만있으면 버튼 출력안됨 ButtonOn 클래스 뒤에추가되면 버튼보임 -->
                <!-- 자기가 쓴글만 버튼 나오게 하기위함 -->
                <!--<button class="ButtonOff " type="button" onclick="onUndate()">수정</button>
                <button class="ButtonOff " type="button" onclick="onDelete()">삭제</button>-->
                <button class="ButtonOff ButtonOn" type="button" href="">목록으로</button>
            </div>
        </div>
    </div>

    <div id="replyWriteBox"><!-- 댓글 입력라인 -->
        <div id="replyinputBox">
            <div class="input-group">
                <textarea onkeyup="replyContentMsg()" id="replyContent" class="form-control" aria-label="With textarea"></textarea>
            </div>
            <div id="replyButtonBox">
                <button type="button" onclick="replyWrite()">댓글 등록하기</button>
            </div>
        </div>
        <!-- 유효성검사 20글자이내로 -->
        <div id="replyContentMsg" class="msgcolorRed"><!-- 안내문구출력 --></div>
    </div>

    <div id="replyViewBox"><!-- 댓글라인 -->
        <div id="replytitle">
            <div class="replyView">
                <div>댓글</div>
                <div>작성자</div>
                <div>날짜</div>
            </div>
        </div>
        <div id="replyprint"><!-- 댓글출력라인 -->
            <div class="replyView">
                <div class="rcContentBox">
                    <div class="rcContent"><!--댓글내용--></div>
                    <div class="rcNameDate">
                        <div class="rcWriterName"><!--작성자--></div>
                        <div class="rcDate"><!--날짜--></div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</div>

<script src="/js/boardOneView.js"></script>
